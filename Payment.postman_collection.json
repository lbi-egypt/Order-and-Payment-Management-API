	"item": [
		{
			"name": "Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Extract and save authentication token from login response",
							"pm.test(\"Login successful and token saved\", function () {",
							"    pm.response.to.have.status(200);",
							"    ",
							"    const jsonData = pm.response.json();",
							"    ",
							"    // Check common token locations and extract the token",
							"    let token = null;",
							"    ",
							"    if (jsonData.token) {",
							"        token = jsonData.token;",
							"    } else if (jsonData.access_token) {",
							"        token = jsonData.access_token;",
							"    } else if (jsonData.data && jsonData.data.token) {",
							"        token = jsonData.data.token;",
							"    } else if (jsonData.data && jsonData.data.access_token) {",
							"        token = jsonData.data.access_token;",
							"    }",
							"    ",
							"    pm.expect(token, \"Token should be present in response\").to.not.be.null;",
							"    ",
							"    // Save token to environment variable",
							"    pm.environment.set(\"token\", token);",
							"    ",
							"    console.log(\"Token saved to environment variable 'token'\");",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
